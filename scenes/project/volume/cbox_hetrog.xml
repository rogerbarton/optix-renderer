<?xml version='1.0' encoding='utf-8'?>

<scene>
	<integrator type="path_vol_mats"/>
	<sampler type="independent">
		<integer name="sampleCount" value="2048"/>
	</sampler>

	<camera type="perspective">
		<float name="fov" value="27.7856"/>
		<transform name="toWorld">
			<scale value="-1,1,1"/>
			<lookat target="0, 0.893051, 4.41198" origin="0, 0.919769, 5.41159" up="0, 1, 0"/>
		</transform>

		<integer name="height" value="600"/>
		<integer name="width" value="800"/>
	</camera>

	<!-- Ambient Media (default vacuum) -->
	<!-- <medium type="homog">
		<phase type="anisophase"/> 
	</medium> -->

	<!-- Volumes -->
	<shape type="obj">
		<string name="filename" value="../meshes/cube.obj"/>
		<transform name="toWorld">
			<scale value="0.5,0.5,0.5"/>
		</transform>

		<bsdf type="diffuse"/>
		<medium type="heterog">
			<color name="sigma_a" value="2, 2, 2"/>
			<!-- <phase type="anisophase"/>  -->

			<volume type="volume">
				<string name="filename" value="fluid_data_0050.vdb"/>
			</volume>
		</medium>
	</shape>

	<!-- Lights -->
	<shape type="obj">
		<string name="filename" value="../meshes/cbox/light.obj"/>

		<emitter type="area">
			<color name="radiance" value="15 15 15"/>
		</emitter>
	</shape>


	<!-- Rest of Scene -->
	<shape type="sphere">
		<point name="center" value="-0.421400 0.332100 -0.280000" />
		<float name="radius" value="0.3263" />

		<bsdf type="mirror"/>
	</shape>

	<shape type="obj">
		<string name="filename" value="../meshes/cbox/walls.obj"/>

		<bsdf type="diffuse">
			<color name="albedo" value="0.725 0.71 0.68"/>
		</bsdf>
	</shape>

	<shape type="obj">
		<string name="filename" value="../meshes/cbox/rightwall.obj"/>

		<bsdf type="diffuse">
			<color name="albedo" value="0.161 0.133 0.427"/>
		</bsdf>
	</shape>

	<shape type="obj">
		<string name="filename" value="../meshes/cbox/leftwall.obj"/>

		<bsdf type="diffuse">
			<color name="albedo" value="0.630 0.065 0.05"/>
		</bsdf>
	</shape>
</scene>
