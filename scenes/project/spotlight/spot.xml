<scene>
	<!-- Independent sample generator, user-selected samples per pixel -->
	<sampler type="independent">
		<integer name="sampleCount" value="32"/>
	</sampler>

	<!-- Use the average visibility integrator -->
	<integrator type="path_mis" />

	<!-- Render the scene as viewed by a perspective camera -->
	<camera type="perspective">
		<transform name="toWorld">
			<lookat target="2,7,0" origin="50,50,50" up="0,1,0"/>
		</transform>

		<!-- Field of view: 30 degrees -->
		<float name="fov" value="30"/>

		<!-- 768 x 768 pixels -->
		<integer name="width" value="768"/>
		<integer name="height" value="768"/>
	</camera>

	<shape type="obj">
		<string name="filename" value="../meshes/camelhead.obj"/>

		<bsdf type="disney">
			<float name="metallic" value="1"/>
			<float name="subsurface" value="0."/>
			<float name="specular" value="0."/>
			<float name="roughness" value="0.43"/>
			<float name="specularTint" value="0.0"/>
			<float name="anisotropic" value="0."/>
			<float name="sheen" value="0.0"/>
			<float name="sheenTint" value="0.0"/>
			<float name="clearcoat" value="0.0"/>
			<float name="clearcoatGloss" value="0.0"/>
			<color name="baseColor" value=".91,.59,.48"/>
		</bsdf>

		<transform name="toWorld">
			<scale value="40,40,40"/>
			<translate value="0,10,0"/>
		</transform>
	</shape>


	<shape type="obj">
		<string name="filename" value="../../pa1/plane.obj"/>

		<bsdf type="diffuse"/>

		<transform name="toWorld">
			<scale value="100,1,100"/>
		</transform>
	</shape>


	<!-- Illuminate using a point light -->
	<emitter type="spot">
		<point name="position" value="-50, 50, -50"/>
		<color name="power" value="200, 200.,200."/>
		<float name="falloffstart" value="20."/>
		<float name="totalwidth" value="30."/>
		<vector name="direction" value="1,-1,1"/>
	</emitter>

</scene>
