<scene>

	<sampler type="independent">
		<integer name="sampleCount" value="512"/>
	</sampler>

	<integrator type="path_mis"/>

	<camera type="perspective">
		<transform name="toWorld">
			<lookat target="0, 0, 0" 
				origin="9, 10, 10"
				up="0, 1, 0"/>
		</transform>

		<float name="fov" value="45"/>
    
		<integer name="width" value="800"/>
		<integer name="height" value="800"/>
	</camera>
  
  <mesh type="obj">
    <string name="filename" value="../meshes/camelhead2.obj"/>

    <!-- set all values to 0 for starter -->
    <bsdf type="disney">
      <float name="metallic" value="0"/>
      <float name="subsurface" value="0"/>
      <float name="specular" value="0"/>
      <float name="roughness" value="0"/>
      <float name="specularTint" value="0"/>
      <float name="anisotropic" value="0"/>
      <float name="sheen" value="0"/>
      <float name="sheenTint" value="0"/>
      <float name="clearcoat" value="0"/>
      <float name="clearcoatGloss" value="0"/>
      <color name="baseColor" value=".819,.67,.157"/>
    </bsdf>
  </mesh>

  <!-- use default color for env map -->
  <emitter type="envmap"/> 

  <emitter type="point">
    <point name="position" value="0, 30, 0"/>
    <color name="power" value="10000,10000,10000"/>
  </emitter>
</scene>