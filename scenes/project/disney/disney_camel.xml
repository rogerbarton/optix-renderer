<scene>

  <sampler type="independent">
    <integer name="sampleCount" value="512"/>
  </sampler>

  <integrator type="path_mats" />

  <camera type="perspective">
    <transform name="toWorld">
      <lookat target="0, 0, 0" origin="5, 5, 5" up="0, 1, 0"/>
    </transform>

    <vector name="origin" value="5, 5, 5"/>

    <float name="fov" value="35"/>

    <integer name="width" value="800"/>
    <integer name="height" value="800"/>
  </camera>

  <mesh type="obj">
    <string name="filename" value="../meshes/camelhead.obj"/>

    <bsdf type="disney">
      <float name="metallic" value="0.0"/>
      <float name="subsurface" value="0"/>
      <float name="specular" value="1"/>
      <float name="roughness" value="0.0"/>
      <float name="specularTint" value="0"/>
      <float name="anisotropic" value="0"/>
      <float name="sheen" value="0.8"/>
      <float name="sheenTint" value="0"/>
      <float name="clearcoat" value="0"/>
      <float name="clearcoatGloss" value="1"/>

      <color name="baseColor" value="0.8, 0.4, 0.0"/>
    </bsdf>

    <transform name="toWorld">
      <scale value="5,5,5"/>
      <translate value="0,0,0"/>
      <rotate angle="0" axis="1,0,0"/>
    </transform>

  </mesh>
  
  <envmap type="png_env">
    <texture type="png_texture" name="envmap">
      <string name="filename" value="../res/canyon1.png"/>
    </texture>
  </envmap>
  
  <emitter type="point">
    <point name="position" value="40, 0, 0"/>
    <color name="power" value="10,10,10"/>
  </emitter>
</scene>
