<scene>

  <sampler type="independent">
    <integer name="sampleCount" value="128"/>
  </sampler>

  <integrator type="normals"/>

  <camera type="perspective">
    <transform name="toWorld">
      <lookat target="0,0,0" origin="10,-10,5" up="0,0,1"/>
    </transform>

    <float name="fov" value="45"/>

    <integer name="width" value="800"/>
    <integer name="height" value="800"/>
  </camera>

  <shape type="obj">
    <string name="filename" value="../meshes/camel_export_blender.obj"/>

    <bsdf type="disney">
      <color name="baseColor" value="0.071, 0.091, 0.8"/>
      <float name="metallic" value="0.0"/>
      <float name="subsurface" value="0.0"/>
      <float name="specular" value="0.0"/>
      <float name="roughness" value="0.0"/>
      <float name="specularTint" value="0.0"/>
      <float name="anisotropic" value="0"/>
      <float name="sheen" value="0.0"/>
      <float name="sheenTint" value="0.0"/>
      <float name="clearcoat" value="0"/>
      <float name="clearcoatGloss" value="0.0"/>
    </bsdf>
  </shape>

  <shape type="sphere">
    <point name="center" value="5,-5,8"/>
    <float name="radius" value="1"/>
    <bsdf type="diffuse">
      <color name="albedo" value="0,0,0"/>
    </bsdf>
    <emitter type="area">
      <color name="radiance" value="100,100,100"/>
    </emitter>
  </shape>

  <emitter type="envmap">
    <texture name="albedo" type="constant_color">
      <color name="value" value="0.051,0.051,0.051"/>
    </texture>
  </emitter>
</scene>
