<!-- Matthias Busenhart -->

<scene>
	<!-- Independent sample generator, 128 samples per pixel -->
	<sampler type="independent">
		<integer name="sampleCount" value="10"/>
	</sampler>

	<!--<integrator type="photonmapper">
		<integer name="photonCount" value="5000000"/>
		<float name="photonRadius" value="0"/>
	</integrator>-->
	<integrator type="path_mis"/>

	<!-- Render the scene as viewed by a perspective camera -->
	<camera type="perspective">
		<transform name="toWorld">
			<lookat target="0, 0, 0" origin="-100, -80, -40" up="0, 0, -1"/>
		</transform>

		<float name="fov" value="85"/>

		<integer name="width" value="800"/>
		<integer name="height" value="800"/>
	</camera>

	<envmap type="png_env">
		<texture type="png_texture" name="envmap">
			<string name="filename" value="../res/photo_studio_01.png"/>
			<vector name="eulerAngles" value="0, 180, 95"/>
		</texture>
		<boolean name="sphereTexture" value="true"/>
	</envmap>

	<denoiser type="basic">
		<integer name="iterations" value="1"/>
		<float name="sigma_d" value="0.5"/>
		<float name="sigma_r" value="0.5"/>
		<integer name="range" value="5"/>
	</denoiser>

	<mesh type="sphere">
		<point name="center" value="-30,-30,0"/>
		<float name="radius" value="20"/>
		<bsdf type="diffuse">
			<texture type="png_texture" name="albedo">
				<string name="filename" value="../res/wooden_motel.png"/>
				<vector name="eulerAngles" value="0, 10, 180"/>
			</texture>
		</bsdf>
	</mesh>

	<mesh type="sphere">
		<point name="center" value="-30,30,0"/>
		<float name="radius" value="20"/>
		<bsdf type="mirror"/>
	</mesh>

	<mesh type="sphere">
		<point name="center" value="30,-30,0"/>
		<float name="radius" value="20"/>
		<bsdf type="mirror"/>
	</mesh>

	<mesh type="sphere">
		<point name="center" value="30,30,0"/>
		<float name="radius" value="20"/>
		<bsdf type="diffuse">
			<color name="albedo" value="0,0,0"/>
		</bsdf>
		<emitter type="area">
			<color name="radiance" value="20,10,10"/>
		</emitter>
	</mesh>
</scene>
