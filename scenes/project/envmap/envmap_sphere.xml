<scene>
	<!-- Independent sample generator, 128 samples per pixel -->
	<sampler type="independent">
		<integer name="sampleCount" value="128"/>
	</sampler>

	<!-- Use the path tracer with multiple importance sampling -->
	<integrator type="path_mis"/>

	<!-- Render the scene as viewed by a perspective camera -->

	<camera type="perspective">
		<transform name="toWorld">
			<lookat target="0, 0, 0" origin="100, 0, 0" up="0, 0, -1"/>
		</transform>

		<float name="fov" value="85"/>

		<integer name="width" value="800"/>
		<integer name="height" value="800"/>
	</camera>

	<emitter type="envmap">
		<texture type="png_texture" name="albedo">
			<string name="filename" value="../res/wooden_motel.png"/>
			<vector name="eulerAngles" value="180,180,0"/>
		</texture>
	</emitter>

	<shape type="sphere">
		<point name="center" value="0,0,0"/>
		<float name="radius" value="20"/>
		<bsdf type="diffuse">
			<!--<texture type="png_texture" name="albedo">
				<string name="filename" value="../res/photo_studio_01.png"/>
			</texture>-->
		</bsdf>
	</shape>

	<!--
	<shape type="sphere">
		<point name="center" value="150,0,0"/>
		<float name="radius" value="20"/>
		<bsdf type="diffuse">
			<color name="albedo" value="0,0,0"/>
		</bsdf>
		<emitter type="area">
			<color name="radiance" value="10, 10, 10"/>
		</emitter>
	</shape>-->
</scene>
